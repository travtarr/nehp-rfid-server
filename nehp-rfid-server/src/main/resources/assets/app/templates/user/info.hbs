<div class="user-box">
	<form {{action 'edit' this on="submit"}}>
		<fieldset>
			<legend>Edit Your Information</legend>
			<label>Username<br>{{input type='text' value=username disabled="disabled"}}</label>
			<label>Name<br>{{input type='text' value=name required="required"}}</label>
			<label>Email<br>{{input type='text' value=email required="required"}}</label>
			<label>Password<br>{{input type='password' value=newpassword required="required" placeholder="Enter new PW"}}</label>
			<label>Verify Password<br>{{input type='password' value=verify-password required="required" placeholder="Enter new PW"}}</label>
			<label>Admin<br>{{input type='checkbox' value=admin checked=admin disabled="disabled"}}</label>
			<label>Scanner<br>{{input type='checkbox' value=scanner checked=scanner disabled="disabled"}}</label>
			<label>{{input type='submit' value="Submit Changes"}}</label>
		</fieldset>
	</form>
</div>