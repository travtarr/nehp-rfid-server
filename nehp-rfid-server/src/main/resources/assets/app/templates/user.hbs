<div class="user-box">
	<form {{action 'edit' on="submit"}}>
		<fieldset>
			<legend>Edit Your Information</legend>
			<label>Username<br>{{input type='text' value=username disabled="disabled"}}</label>
			<label>Name<br>{{input type='text' valueBinding='name' required="required" value=name}}</label>
			<label>Email<br>{{input type='text' valueBinding='email' required="required" value=email}}</label>
			<label>Admin<br>{{input type='checkbox' valueBinding='admin' checked=admin disabled="disabled"}}</label>
			<label>Scanner<br>{{input type='checkbox' valueBinding='scanner' checked=scanner disabled="disabled"}}</label>
			<label>{{#link-to 'user' tagName="button"}}Cancel{{/link-to}}{{input type='submit' value="Submit Changes"}}</label>
		</fieldset>
	</form>
</div>