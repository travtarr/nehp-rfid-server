<div class = "tables-items">
	<table class="table-hover">
		<thead>
			<tr>
				<th>Stage</th>
				<th>Description</th>
				<th>Date</th>
				<th>Signed By</th>
				<th>Reason</th>
				<th>Duration</th>
			</tr>
		</thead>
	</table>
	
	<div class="inner-table">
		<table>
			<tbody>
			{{#each filteredItems}}
				<tr {{action 'showImage' this.id}}>
					<td>{{stage}}</td>
					<td>{{description}}</td>
					<td>{{stage_date}}</td>
					<td>{{signed_by}}</td>
					<td>{{reason}}</td>
					<td>{{duration}}</td>
				</tr>
			{{/each}}
			</tbody>
		</table>
	</div>
</div>