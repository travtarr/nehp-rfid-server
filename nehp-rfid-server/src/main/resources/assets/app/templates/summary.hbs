<div class="container-fluid">
	<div class="row-fluid">
		<div class="span12">
			<div class="header-summary">
				<span class="light-title">Summary of Overdue Drawings / Items</span>
			</div>
		</div>
	</div>
	<div class="row-fluid">
		<div class="span2">
			<ul class="nav nav-inverse dark-list nav-pointer">
				<li class="nav-header">In-Process</li>
				<li><a {{action 'setStage' 'ALL'}}>All</a></li>
				<li><a {{action 'setStage' 'INTEGRATING'}}>Integrating</a></li>
				<li><a {{action 'setStage' 'KITTING'}}>Kitting</a></li>
				<li><a {{action 'setStage' 'AWAITING MFR'}}>Awaiting Mfg</a></li>
				<li><a {{action 'setStage' 'MANUFACTURING'}}>Manufacturing</a></li>
				<li><a {{action 'setStage' 'QA/QC'}}>QA/QC</a></li>
				<li><a {{action 'setStage' 'SHIPPING'}}>Shipping</a></li>
				<li><a {{action 'setStage' 'COMPLETE'}}>Completed</a></li>
				<li class="divider"></li>
				<li class="nav-header">On Hold</li>
				<li><a {{action 'setStage' 'ON_HOLD'}}>All</a></li>
			</ul>
		</div>
		<div class="span10">
			<div class="tables-items">
				<table>
					<thead>
						<th><button {{action 'toggleSort' 'current_stage_desc'}}>Current Stage</button></th>
						<th><button {{action 'toggleSort' 'item_id'}}>Drawing / Item</button></th>
						<th><button {{action 'toggleSort' 'current_revision'}}>Revision</button></th>
						<th><button {{action 'toggleSort' 'group'}}>Group</button></th>
						<th><button {{action 'toggleSort' 'last_status_change_date'}}>Last Change</button></th>
					</thead>
				</table>
				<div class="inner-table">
					<table class="table-hover">
						<tbody>
							{{#each filteredItems}}
							<tr {{action 'goToItem' this.id}}>
								<td>{{current_stage_desc}}</td>
								<td>{{item_id}}</td>
								<td>{{current_revision}}</td>
								<td>{{group}}</td>
								<td>{{last_status_change_date}}</td>
							</tr>
							{{/each}}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
