{{outlet modal}}
<div class="row">
	<div class="col-md-12">
		<div class="item-details-title"><span>Details</span></div>
	</div>
</div>
<div class="row">
	<div class="tbl-4">
		<table>
			<tr>
				<th><span>Item / Drawing</span></th>
			</tr>
			<tr>
				<td><span>{{item_id}}</span></td>
			</tr>
		</table>
	</div>
	<div class="tbl-4">
		<table>
			<tr>
				<th><span>Group</span></th>
			</tr>
			<tr>
				<td><span>{{group}}</span></td>
			</tr>
		</table>
	</div>
	<div class="tbl-4">
		<table>
			<tr>
				<th><span>Revision</span></th>
			</tr>
			<tr>
				<td><span>{{current_revision}}</span></td>
			</tr>
		</table>
	</div>
	<div class="tbl-4">
		<table>
			<tr>
				<th><span>Stage</span></th>
			</tr>
			<tr>
				<td><span>{{current_stage}}</span></td>
			</tr>
		</table>
	</div>
	<div class="tbl-4">
		<table>
			<tr>
				<th><span>Hold Reason</span></th>
			</tr>
			<tr>
				<td><span>{{reason}}</span></td>
			</tr>
		</table>
	</div>
	<div class="tbl-4">
		<table>
			<tr>
				<th><span>Created By</span></th>
			</tr>
			<tr>
				<td><span>{{created_by}}</span></td>
			</tr>
		</table>
	</div>
	<div class="tbl-4">
		<table>
			<tr>
				<th><span>Created Date</span></th>
			</tr>
			<tr>
				<td><span>{{created_date}}</span></td>
			</tr>
		</table>
	</div>
	<div class="tbl-4">
		<table>
			<tr>
				<th><span>Last Status Change User</span></th>
			</tr>
			<tr>
				<td><span>{{last_status_change_user}}</span></td>
			</tr>
		</table>
	</div>
	<div class="tbl-4">
		<table>
			<tr>
				<th><span>Last Status Change Date</span></th>
			</tr>
			<tr>
				<td><span>{{last_status_change_date}}</span></td>
			</tr>
		</table>
	</div>
	<div class="tbl-8">
		<table>
			<tr>
				<th><span>Comment</span></th>
			</tr>
			<tr>
				<td><span>{{comment}}</span></td>
			</tr>
		</table>
	</div>
</div>
<div class="row">
	<div class="tbl-4">
		<table>
			<tr>
				<th>Integration Begin</th>
			</tr>
			<tr>
				<td {{action 'showImage' 1}}>{{stage1_user}}</td>
			</tr>
			<tr>
				<td>{{stage1_date}}</td>
			</tr>
		</table>
	</div>
	<div class="tbl-4">
		<table>
			<tr>
				<th>Integration End</th>
			</tr>
			<tr>
				<td {{action 'showImage' 2}}>{{stage2_user}}</td>
			</tr>
			<tr>
				<td>{{stage2_date}}</td>
			</tr>
		</table>
	</div>
	<div class="tbl-4">
		<table>
			<tr>
				<th>Parts Allocated</th>
			</tr>
			<tr>
				<td {{action 'showImage' 3}}>{{stage3_user}}</td>
			</tr>
			<tr>
				<td>{{stage3_date}}</td>
			</tr>
		</table>
	</div>
	<div class="tbl-4">
		<table>
			<tr>
				<th>Manufacturing Begin</th>
			</tr>
			<tr>
				<td {{action 'showImage' 4}}>{{stage4_user}}</td>
			</tr>
			<tr>
				<td>{{stage4_date}}</td>
			</tr>
		</table>
	</div>
	<div class="tbl-4">
		<table>
			<tr>
				<th>Manufacturing End</th>
			</tr>
			<tr>
