			<tr>
				<td>{{stage5_date}}</td>
			</tr>
		</table>
	</div>
	<div class="tbl-4">
		<table>
			<tr>
				<th>QA/QC Complete</th>
			</tr>
			<tr>
				<td {{action 'showImage' 6}}>{{stage6_user}}</td>
			</tr>
			<tr>
				<td>{{stage6_date}}</td>
			</tr>
		</table>
	</div>
	<div class="tbl-4">
		<table>
			<tr>
				<th>Shipped</th>
