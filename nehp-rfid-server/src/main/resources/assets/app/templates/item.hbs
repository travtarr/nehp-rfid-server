				<td {{action 'showImage' 7}}>{{stage7_user}}</td>
			</tr>
			<tr>
				<td>{{stage7_date}}</td>
			</tr>
		</table>
	</div>
	<div class="tbl-4">
		<table>
			<tr>
				<th>On Hold</th>
			</tr>
			<tr>
				<td>{{stage0_user}}</td>
			</tr>
			<tr>
				<td>{{stage0_date}}</td>
			</tr>
		</table>
	</div>
</div>