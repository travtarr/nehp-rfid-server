<div class="item-details-title"><span>Details</span></div>
<div class="details">
	<table class="double-column">
		<tbody>
			<tr>
				<td class="header">Item / Drawing</td><td class="details-text">{{item_id}}</td>
				<td class="header">Group</td><td class="details-text">{{group}}</td>
			</tr>
			<tr>
				<td class="header">Created By</td><td class="details-text">{{created_by}}</td>
				<td class="header">Created Date</td><td class="details-text">{{created_date}}</td>
			</tr>
			<tr>
				<td class="header">Last Change Date</td><td class="details-text">{{last_status_change_date}}</td>
				<td class="header">Last Change User</td><td class="details-text">{{last_status_change_user}}</td>
			</tr>
			<tr>
				<td class="header">Revision</td><td class="details-text">{{current_revision}}</td>
				<td class="header">Revision Date</td><td class="details-text">{{current_revision_date}}</td>
			</tr>
			<tr>
				<td class="header">Current Stage</td><td class="details-text">{{current_stage}}</td>
				<td class="header">Reason</td><td class="details-text">{{reason}}</td>
			</tr>
			<tr>
				<td class="header">Comment</td>
				<td colspan="3">{{comment}}</td>
			</tr>
		</tbody>
	</table>
</div>
