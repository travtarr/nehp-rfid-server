				<td>Manufacturing End</td>
				<td>QA/QC Complete</td>
				<td>Shipped</td>
				<td>On Hold</td>
			</tr>
			<tr>
				<td class="header">User</td>
				<td class="details-text">{{stage1_user}}</td>
				<td class="details-text">{{stage2_user}}</td>
				<td class="details-text">{{stage3_user}}</td>
				<td class="details-text">{{stage4_user}}</td>
				<td class="details-text">{{stage5_user}}</td>
				<td class="details-text">{{stage6_user}}</td>
				<td class="details-text">{{stage7_user}}</td>
				<td class="details-text">{{stage0_user}}</td>
			</tr>
			<tr>
				<td class="header">Date</td>
				<td>{{stage1_date}}</td>
				<td>{{stage2_date}}</td>
				<td>{{stage3_date}}</td>
				<td>{{stage4_date}}</td>
				<td>{{stage5_date}}</td>
				<td>{{stage6_date}}</td>
